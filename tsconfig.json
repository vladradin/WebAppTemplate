{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true,
        "outDir": "js-build",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "ES2017"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}